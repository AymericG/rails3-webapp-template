= form_for(@page) do |f|
  - if @page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@page.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @page.errors.full_messages.each do |msg|
        %li= msg
  

  .field
    = f.label :title
    %br
    = f.text_field :title

  .field
    = f.label :slug
    %br
    = f.text_field :slug

  .field
    = f.label :text
    %br
    = f.text_area :text

  .actions
    = f.submit
